@model campingplan.Models.users

@{Layout = null;}


@using (Ajax.BeginForm("Register", "Customer", new AjaxOptions { OnSuccess = "showDialogRegister", HttpMethod = "POST" }, new { @class = "modal-dialog modal-dialog-centered modal-lg mowh" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-content">
        <div class="modal-header pb-0">
            <h5 class="modal-title">會員註冊</h5>
            <p>(<font color="red">*</font>必填)</p>
            <button type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="modal-body pb-0">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-4">
                        <img src="~/Content/images/bg/bg-2.jpg" alt="" class="img-fluid" />
                    </div>
                    <div class="col-8">
                        <div class="form-group m-0">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.maccount, htmlAttributes: new { @class = "control-label" })
                                        <font color="red">*</font>
                                        @Html.ValidationMessageFor(model => model.maccount, "", new { @class = "text-danger" })
                                        <div>
                                            @Html.EditorFor(model => model.maccount, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.mpassword, htmlAttributes: new { @class = "control-label" })
                                        <font color="red">*</font>
                                        @Html.ValidationMessageFor(model => model.mpassword, "", new { @class = "text-danger" })
                                        <div>
                                            @Html.EditorFor(model => model.mpassword, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                                        <font color="red">*</font>
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                        <div>
                                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.mname, htmlAttributes: new { @class = "control-label" })
                                        <font color="red">*</font>
                                        @Html.ValidationMessageFor(model => model.mname, "", new { @class = "text-danger" })
                                        <div class="">
                                            @Html.EditorFor(model => model.mname, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.mnickname, htmlAttributes: new { @class = "control-label" })
                                        <font color="red">*</font>
                                        @Html.ValidationMessageFor(model => model.mnickname, "", new { @class = "text-danger" })
                                        <div class="">
                                            @Html.EditorFor(model => model.mnickname, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.memail, htmlAttributes: new { @class = "control-label" })
                                        <font color="red">*</font>
                                        @Html.ValidationMessageFor(model => model.memail, "", new { @class = "text-danger" })
                                        <div class="">
                                            @Html.EditorFor(model => model.memail, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.birth_date, htmlAttributes: new { @class = "control-label" })
                                        <font color="red">*</font>
                                        @Html.ValidationMessageFor(model => model.birth_date, "", new { @class = "text-danger" })
                                        <div class="">
                                            @Html.EditorFor(model => model.birth_date, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="aa">地址</label>
                                        <div>
                                            <input type="password"
                                                   placeholder="非必填"
                                                   class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="aa">身份證字號</label>
                                        <div>
                                            <input type="password"
                                                   placeholder="非必填"
                                                   class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="aa">身高</label>
                                        <div>
                                            <input type="password"
                                                   placeholder="非必填"
                                                   class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="aa">體重</label>
                                        <div>
                                            <input type="password"
                                                   placeholder="非必填"
                                                   class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="aa">鞋號</label>
                                        <div>
                                            <input type="password"
                                                   placeholder="非必填"
                                                   class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "control-label" })
                                        <font color="red">*</font>
                                        @Html.EditorFor(model => model.remark, new { htmlAttributes = new { @class = "form-control" } })
                                        <div>
                                            @Html.ValidationMessageFor(model => model.remark, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="form-group">
                <input type="submit" value="送出" class="btn btn-default" />
            </div>
            <div class="form-group">
                <input type="reset" value="重填" class="btn btn-default" />
            </div>
        </div>
    </div>

}

