@model campingplan.Models.users

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<div class="col-9 mg-product">
    <div class="col-12 mb-2">
        <div class="row">
            <div class="col-10 d-flex">
                <div class="title-item"></div>
                <h5 class="ml-3">編輯資料</h5>@Html.ActionLink("回到商品列表", "BackProdutList")
            </div>
        </div>
    </div>
    <div class="col-12 mb-2">
        @using (Html.BeginForm())
        {
            <div class="bg-white pl-4 pr-5 py-4">
                @Html.AntiForgeryToken()
                <div class="row text-center">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.rowid)
                    @Html.HiddenFor(model => model.mno)
                    @Html.HiddenFor(model => model.mpassword)
                    @Html.HiddenFor(model => model.role_no)
                    @Html.HiddenFor(model => model.varify_code)
                    @Html.HiddenFor(model => model.isvarify)
                    @Html.HiddenFor(model => model.maccount)

                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.maccount, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-5 my-3 d-inline-block">
                        @Html.DisplayFor(model => model.maccount)
                    </div>

                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.mname, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-5 my-3 d-inline-block">
                        @Html.EditorFor(model => model.mname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.mname, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.mnickname, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-5 my-3 d-inline-block">
                        @Html.EditorFor(model => model.mnickname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.mnickname, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.memail, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-5 my-3 d-inline-block">
                        @Html.EditorFor(model => model.memail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.memail, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.birthday, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-11 my-3 d-inline-block">
                        @Html.EditorFor(model => model.birthday, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.birthday, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-11 my-3 text-justify">
                        @Html.TextAreaFor(model => model.remark, 8, 6, new { @class = "form-control text-height" })
                        @Html.ValidationMessageFor(model => model.remark, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-12 text-right">
                        <input class="btn btn-info" type="submit" value="送出" />
                        <input class="btn btn-danger" type="reset" value="重填" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>

