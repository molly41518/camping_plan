@using PagedList.Mvc
@using PagedList
@model IPagedList<campingplan.Models.product>
@using campingplan.App_Class;

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        $(document).ready(function () {
            $("#myTab a:first").click(function () {
                $("#tabmenu1").addClass("fade");
            });
            $("#checkDate").flatpickr({
                    minDate : "today",
                    maxDate : new Date().fp_incr(90),
                    mode : "range"
            })
        });
    </script>
}
@section styles{
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        * {
            font-family: 微軟正黑體;
            list-style: none;
            text-decoration: none;
        }

        a:hover {
            text-decoration: none;
        }

        .masthead {
            padding-top: 10rem;
            padding-bottom: calc(18rem - 4.5rem);
            background-image: url(../../Content/images/bg/bg-2.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: scroll;
            background-size: auto;
            height: 30vh;
        }

        .navbar {
            -webkit-box-shadow: 0 8px 6px -6px #444;
            -moz-box-shadow: 0 8px 6px -6px #555;
            box-shadow: 0 8px 6px -6px #777;
        }

        /* pr 單商品card CSS */
        .pr_loction_des {
            color: rgb(110, 109, 109);
        }

        .pr_campitem {
            list-style: none;
            display: inline-block;
            width: 6rem;
            height: 3rem;
            border: 1px solid black;
            font-size: 15px;
            text-align: center;
        }

        .pr_camptype {
            list-style: none;
            display: inline-block;
            width: 4rem;
            height: 1rem;
            border: 1px solid rgb(110, 109, 109);
            border-radius: 30px 30px 30px 30px;
            font-size: 13px;
            text-align: center;
            padding-bottom: 1rem;
            color: rgb(110, 109, 109);
        }

        .pr_carditem {
            transition: all 0.5s;
        }

            .pr_carditem:hover {
                box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.2);
                transform: translate3d(0, -1rem, 0);
                /*transform: scale(1.5,1.5);*/
                /*transform: skew(30deg,0);*/
            }

        .pr_type_loction {
            border-radius: 30px 30px 30px 30px;
        }

        .pr_line {
            background-image: linear-gradient(#14b9eb, #14b9eb);
            background-position: left bottom;
            background-size: 0 2.5px;
            background-repeat: no-repeat;
            transition: all 0.15s;
        }

            .pr_line:hover {
                background-size: 100% 2.5px;
                border: none;
            }

        .nav-tabs .nav-link.active {
            background-color: rgba(255, 255, 255, 0);
        }

        .pr_type_sea_boder {
            border-radius: 5px;
        }

        .text-uppercase {
            background-color: rgba(0, 0, 0, 0.1);
        }

        @@media screen and (max-width: 572px) {
            .pr_type_loction_lg {
                display: none;
            }
        }

        @@media screen and (min-width: 572px) {
            .pr_type_loction_sm {
                display: none;
            }
        }
    </style>
}


<header class="masthead mb-3">
    <div class="container">
        <div class="row text-center align-self-center justify-content-center">
            <div class="col-12 col-lg-12">
                <div class="offset-4 col-4 col-lg-4 mb-2">
                    <h3 class="text-uppercase font-weight-bold text-white">露營地</h3>
                </div>
            </div>

            <div class="col-8 col-lg-8">
                <ul id="myTab" class="nav nav-tabs border-0">
                    <li class="nav-item offset-3 col-3 p-0">
                        <a class="pr_line nav-link text-white border-0 mb-2 font-weight-bold"
                           data-toggle="tab"
                           href="#tabmenu1">關鍵字搜尋</a>
                    </li>
                    <li class="nav-item col-3 p-0">
                        <a class="pr_line nav-link text-white border-0 mb-2 font-weight-bold"
                           data-toggle="tab"
                           href="#tabmenu2">分類搜尋</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div id="tabmenu1" class="tab-pane active">
                        <div class="col-12 col-lg-12 p-0">
                            @using (Html.BeginForm("CategoryList", "Product", FormMethod.Post))
                            {

                                <div class="input-group my-2">

                                    @Html.TextBox("searchString", null, new { @class = "form-control col-lg-8" })
                                    @*<div class="col-8 col-lg-8">
                                            <input id="checkDate" />
                                        </div>*@
                                    @Html.TextBox("dateSearch", null, new { @class = "form-control col-lg-8", @id = "checkDate" })
                                    <input type="submit" class="col-lg-4 btn btn-info btn-block m-0" value="搜尋" />

                                </div>

                            }
                        </div>
                    </div>
                    <div id="tabmenu2" class="tab-pane fade">
                        <div class="col-12 col-lg-12 bg-white pt-2">
                            @using (Html.BeginForm("CategoryList", "Product", FormMethod.Post))
                            {
                                <ul class="row">
                                    @foreach (var f in Shop.GetFeatureDict())
                                    {
                                        <li class="col-3 col-lg-3 small text-left">@Html.CheckBox(@f.Value, true) @f.Value</li>
                                    }
                                </ul>
                            }
                            <input type="submit" class="col-12 col-lg-12 btn btn-info btn-block m-0" value="搜尋" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="pr_type_loction_lg mb-4 text-center">
    <ul class="p-0">
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            全部
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            大台北
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            桃園
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            新竹
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            苗栗
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            中彰投
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            雲嘉南
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            高屏
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            宜蘭
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            花東
        </li>
        <li class="pr_type_loction btn btn-outline-info d-inline-block mr-2">
            離島
        </li>
    </ul>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            string productimgname = string.Format("{0}.jpeg", @item.pimg);
            <div class="col-12 col-md-6 col-lg-4 mb-5">
                <a href="@Url.Action("ProductDetail","Product",new { id = item.pno, startday = ViewBag.startday, endday = ViewBag.endday, qty = ViewBag.qty })">
                    <div class="card pr_carditem">
                        <img class="card-img-top"
                             src="~/Content/images/product/@productimgname"
                             alt="Card image cap" />
                        <div class="card-body">
                            <p class="pr_loction_des small m-0 pb-2">
                                <i class="fas fa-map-marker-alt text-info pr-2"></i>@item.plocation
                            </p>
                            <h5 class="card-title font-weight-bold text-dark">@item.pname</h5>
                            <ul class="p-0">
                                @foreach (var f in Shop.GetFeatureList(item.product_features))
                                {
                                    <li class="pr_camptype align-self-center justify-content-center">
                                        <span>@f</span>
                                    </li>
                                }
                            </ul>
                            <hr />
                            <div class="row align-items-center">
                                <p class="col-12 m-0 mb-1 small">
                                    最早可預定日期：2020年12月31日
                                </p>
                                <p class="col-4 text-warning m-0">
                                    <i class="fas fa-star pr-1"></i>4.5
                                </p>
                                <p class="col-8 text-info font-weight-bold h4 text-right">
                                    $NT @*@item.pprice*@
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
        <div class="col-12">
            <div class="text-center">
                @Html.PagedListPager(Model, page => Url.Action("CategoryList", "Product", new { page }))
            </div>
        </div>
    </div>
</div>