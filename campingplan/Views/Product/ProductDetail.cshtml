@model campingplan.Models.product
@using campingplan.App_Class

@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_LayoutProduct.cshtml";
}

@section styles{
    <link rel="stylesheet" href="@Url.Content("~/Content/camping/fullcalendar.min.css")" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
    <style>
        .masthead {
            padding-top: 10rem;
            padding-bottom: calc(18rem - 4.5rem);
            background-image: url(/img/bg-4.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: scroll;
            background-size: auto;
            height: 1%;
        }

        .navbar {
            -webkit-box-shadow: 0 8px 6px -6px #444;
            -moz-box-shadow: 0 8px 6px -6px #555;
            box-shadow: 0 8px 6px -6px #777;
        }

        .pr_camptype2 {
            list-style: none;
            display: inline-block;
            width: 6rem;
            height: 1.5rem;
            border: 1px solid rgb(110, 109, 109);
            border-radius: 30px 30px 30px 30px;
            text-align: center;
            padding-bottom: 1rem;
            color: rgb(110, 109, 109);
        }

        .line {
            margin-top: 0.2rem;
            height: 1.5rem;
            width: 4px;
        }
    </style>

}

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        $(document).ready(function () {
            $("#checkDate").flatpickr({
                minDate: "today",
                maxDate: new Date().fp_incr(90),
                dateFormat: "Y-m-d",
                mode: "range"
            })
        });
    </script>
    <script src="@Url.Content("~/Scripts/camping/fullcalendar.js")"></script>
    <script src="@Url.Content("~/Scripts/camping/moment.min.js")"></script>
    <script src="@Url.Content("~/Scripts/camping/zh-tw.js")"></script>
    <script>

        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                aspectRatio: 0.6,
                initialView: 'dayGridMonth',
                headerToolbar: {
                    right: 'prev,next',
                    left: 'title'
                },
                titleFormat: { // will produce something like "Tuesday, September 18, 2018"
                    month: 'short',
                    year: 'numeric',
                },
                fixedWeekCount: false,
                showNonCurrentDates: true,
                dayHeaderFormat: { weekday: "narrow" },
                dayCellContent: function (arg) {
                  return arg.date.getDate();
                },
                locale: 'zh-tw',
                handleWindowResize: true,
                events: "@Url.Action("GetStockEvent", "Product", new { id = Model.pno })"
                //events: [{title: 's', start: '2020-12-04'}]
            });
            calendar.render();
        });

    </script>
}


<header>
    @{string productimgname = string.Format("{0}.jpeg", @Model.pno); }
    <div class="container">
        <div id="carouselExampleIndicators"
             class="carousel slide"
             data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators"
                    data-slide-to="0"
                    class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">

                    <img src="~/Content/images/product/@productimgname"
                         class="d-block w-100"
                         alt="" />
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/product/@productimgname"
                         class="d-block w-100"
                         alt="" />
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/product/@productimgname"
                         class="d-block w-100"
                         alt="" />
                </div>
            </div>
            <a class="carousel-control-prev"
               href="#carouselExampleIndicators"
               role="button"
               data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next"
               href="#carouselExampleIndicators"
               role="button"
               data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</header>

<div class="container mt-3">
    <div class="row">
        <div class="col-lg-9">
            <i class="fas fa-map-marker-alt text-info pr-2"></i><span>@Model.plocation</span>
            <h1 class="my-2">@Model.pname</h1>
            @for (int s = 1; s <= Model.start_count; s++)
            {
                <i class="fas fa-star text-warning small"></i>
            }
            <span class="text-secondary small pl-2">@Model.browse_count 次評價</span>
            <ul class="mt-4 p-0">
                @foreach (var f in Shop.GetFeatureList(Model.product_features))
                {

                    <li class="pr_camptype2 align-self-center justify-content-center">
                        <span>@f</span>
                    </li>
                }
            </ul>
            <hr />
            <div class="line bg-info mr-2 d-inline-block"></div>
            <h2 class="my-5 d-inline-block">營地須知</h2>
            <p>
                @Html.Raw(Model.pdescription)
            </p>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <div class="card-header">空位狀況</div>
                <div id="calendar"></div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="line bg-info mr-2 d-inline-block"></div>
            <h2 class="my-5 d-inline-block">營地地址</h2>
            <iframe src="@Model.pmapurl"
                    width="1150"
                    height="300"
                    frameborder="0"
                    style="border: 0"
                    allowfullscreen=""
                    aria-hidden="false"
                    tabindex="0">
            </iframe>
        </div>
        <div class="col-lg-12 mt-4">
            <div class="row align-content-center justify-content-center">


                <div class="col-lg-4 d-inline-block h2"><div class="line bg-info mr-2 d-inline-block"></div>預定日期</div>

                @{
                    DateTime startday = DateTime.Today;
                    DateTime endday = startday.AddDays(1);
                    int qty = ViewBag.qty == null ? 1 : ViewBag.qty;
                    if (ViewBag.startday != null && ViewBag.endday != null)
                    {
                        startday = ViewBag.startday;
                        endday = ViewBag.endday;
                    }
                }


                @using (Html.BeginForm("ProductDetail", "Product", FormMethod.Post, new { @class = "col-lg-8" }))
                {
                    <div class="row d-flex">
                        <div class="col-12 col-lg-5">
                            <i class="far fa-calendar-alt"></i>
                            <div class="d-inline-block col-10">
                                @Html.TextBox("dateSearch", null, new { @class = "form-control", @id = "checkDate" })
                            </div>
                        </div>
                        <div class="col-12 mt-2 mt-lg-0 col-lg-4">
                            <i class="fas fa-users"></i>
                            <div class="d-inline-block col-11 col-lg-10">
                                <select id="stock_qty" name="stock_qty" class="form-control">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                    <option>9</option>
                                    <option>10</option>
                                </select>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-info btn-block m-0 col-2" value="搜尋" />
                    </div>

                }
            </div>
            <spap>起始日期：@startday</spap>
            <span>結束日期：@endday</span>
            <span>營位數量：@qty</span>
        </div>

        <div class="col-lg-12 my-4">
            <div class="h2 d-inline-block"><div class="line bg-info mr-2 d-inline-block"></div>營地區域</div>
        </div>
        @{
            var productdetaildict = Shop.GetDictProductTypeDetail(Model.product_typedetail, qty, startday, endday);

            foreach (var area in productdetaildict)
            {
                <div class="card mt-3">
                    <div class="card-header">@area.Key</div>
                    <div class="card-body">
                        <div class="container">
                            <div class="row">
                                @{
                                    foreach (var detail in area.Value)
                                    { <div class="col-lg-4">
                                            <img src="~/Content/images/bg/bg-1.jpeg" class="img-fluid" />
                                        </div>
                                        <div class="col-lg-8">
                                            <h5 class="card-title">@detail.ptype_name</h5>
                                            <p>
                                                @Html.Raw(detail.ptype_dep)
                                            </p>
                                            <p class="col-8 text-info font-weight-bold h4 text-right">
                                                $NT @detail.ptype_price
                                            </p>
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    @Html.ActionLink("訂購", "AddToCart", "Product", new { pno = detail.pno, ptype_no = detail.ptype_no, startday = startday, endday = endday, qty = qty }, new { @class = "btn btn-primary" })
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

            }
        }




    </div>
</div>

