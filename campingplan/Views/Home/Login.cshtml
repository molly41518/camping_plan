@{
    ViewBag.Title = "Login";
}

<div class="jumbotron text-center" style="height:10px;">
    <p>登入頁面</p>
</div>

<form action="@Url.Action("Login")" method="post">
    <div class="form-horizontal text-center">
        <div class="form-group ">
            <span class="control-label col-md-5 text-center">帳號</span>
            <div class="col-md-7">
                <input type="text" id="UserId" name="UserId" required="required" class="form-control" />
            </div>
        </div>
        
        <div class="form-group">
            <span class="control-label col-md-5">密碼</span>
            <div class="col-md-7">
                <input type="password" id="UserPassword" name="UserPassword" required="required" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 ">
                <input id="Submit1" type="submit" value="登入" />
                <input id="Reset1" type="reset" value="取消" />
            </div>
        </div>
        
    </div>
</form>