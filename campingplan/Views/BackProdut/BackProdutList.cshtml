@model IEnumerable<campingplan.Models.product>
@{
    ViewBag.Title = "BackProdutList";
}

<div class="container-fluid mt-5">
    <div class="row ">
        <!-- Sidebar -->
        <nav class="col-2 sidebar bg-info">
            <div class="sidebar-header">
                <h3>管理後臺</h3>
            </div>

            <ul class="list-unstyled components">
                <p>管理員 molly</p>
                <li class="active">
                    <a href="#homeSubmenu"
                       data-toggle="collapse"
                       aria-expanded="false"
                       class="dropdown-toggle">Home</a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li>
                            <a href="#">商品管理</a>
                        </li>
                        <li>
                            <a href="#">會員管理</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#">About</a>
                </li>
                <li>
                    <a href="#pageSubmenu"
                       data-toggle="collapse"
                       aria-expanded="false"
                       class="dropdown-toggle">Pages</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li>
                            <a href="#">Page 1</a>
                        </li>
                        <li>
                            <a href="#">Page 2</a>
                        </li>
                        <li>
                            <a href="#">Page 3</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#">Portfolio</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>
        </nav>
        <!-- Page Content -->
        <div class="col-10 mg-product mt-5">
            <div class="col-12 mb-2">
                <div class="row">
                    <div class="col-10">
                        <h5>商品列表</h5>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-info">刪除</button>
                        @Html.ActionLink("新增", "BackProdutInsert", "BackProdut", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
            <div class="col-lg-12 mb-2">
                <div class="card carditem">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-1 align-self-center">
                                <p class="m-0">勾選</p>
                            </div>
                            <div class="col-1 align-self-center">
                                <p class="m-0">商品編號</p>
                            </div>
                            <div class="col-1 align-self-center">
                                <p class="m-0">商品圖片</p>
                            </div>
                            <div class="col-3 align-self-center">
                                <p class="m-0">商品名稱</p>
                            </div>
                            <div class="col-1 align-self-center">
                                <p class="m-0">狀態</p>
                            </div>
                            <div class="col-2 align-self-center">
                                <p class="m-0">建立日期</p>
                            </div>
                            <div class="col-1 align-self-center">
                                <p class="m-0">預定次數</p>
                            </div>
                            <div class="col-2 align-self-center">
                                <p class="m-0">管理</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var item in Model)
            {
                string productimgname = string.Format("{0}.jpeg", @item.pimg);
                <div class="col-lg-12 mb-2">
                    <div class="card carditem">
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-1 text-center align-self-center">
                                    <input type="checkbox" style="width: 20px; height: 20px" />
                                </div>
                                <div class="col-1">
                                    <p>@item.pno</p>
                                </div>
                                <div class="col-1 text-center">
                                    <img class="img-fluid imgproduct" src="~/Content/images/product/@productimgname" />
                                </div>
                                <div class="col-3 align-self-center">
                                    <h5>@item.pname</h5>
                                </div>
                                <div class="col-1 align-self-center">
                                    <p>上架中</p>
                                </div>
                                <div class="col-2 align-self-center">
                                    <p>2020/01/01</p>
                                </div>
                                <div class="col-1 align-self-center">
                                    <p>20</p>
                                </div>
                                <div class="col-2 align-self-center">
                                    <a href="@Url.Action("BackProdutDelect","BackProdut",new { pr_rowid = item.rowid })" class="i-act pr-1 text-info">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                    <a href="@Url.Action("BackProductEdit","BackProdut",new { pr_rowid = item.rowid })" class="i-act pr-1 text-info">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

