@model campingplan.Models.product

@{
    ViewBag.Title = "BackProdutInsert";
    Layout = "~/Views/Shared/_Layoutback.cshtml";
}

<div class="col-10 mg-product">
    <div class="col-12 mb-2">
        <div class="row">
            <div class="col-10 d-flex">
                <div class="title-item"></div>
                <h5 class="ml-3">新增商品</h5> @Html.ActionLink("回到商品列表", "BackProdutList")
            </div>
        </div>
    </div>
    <div class="col-12 mb-2">
        @using (Html.BeginForm())
        {
            <div class="bg-white pl-4 pr-5 py-4">
                @Html.AntiForgeryToken()
                <div class="row text-center">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.categoryid, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-5 my-3 d-inline-block">
                        @Html.EditorFor(model => model.categoryid, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.categoryid, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.pno, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-5 my-3 d-inline-block">
                        @Html.EditorFor(model => model.pno, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pno, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.plocation, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-5 my-3 d-inline-block">
                        @Html.EditorFor(model => model.plocation, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.plocation, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.pimg, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-5 my-3 d-inline-block">
                        @Html.EditorFor(model => model.pimg, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pimg, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.pname, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-11 my-3 d-inline-block">
                        @Html.EditorFor(model => model.pname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pname, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.pdescription, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-11 my-3 text-justify">
                        @Html.TextAreaFor(model => model.pdescription, 8, 6, new { @class = "form-control text-height" })
                        @Html.ValidationMessageFor(model => model.pdescription, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-1 align-self-center">
                        @Html.LabelFor(model => model.pprice, htmlAttributes: new { @class = "my-3" })
                    </div>
                    <div class="col-11 my-3 d-inline-block">
                        @Html.EditorFor(model => model.pprice, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pprice, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-12 text-right">
                        <input class="btn btn-info" type="submit" value="送出" />
                        <input class="btn btn-danger" type="reset" value="重填" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div>

    </div>
</div>
