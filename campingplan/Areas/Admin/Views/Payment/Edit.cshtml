@model campingplan.Models.payments

@{
    ViewBag.Title = "會員資料" + ((Model.rowid > 0) ? "修改" : "新增");
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@using (Html.BeginForm("Edit", "Payment", new { area = "Admin" }, FormMethod.Post, new { id = "popupForm" }))
{
    @Html.AntiForgeryToken()
    if (Model != null && Model.rowid > 0)
    {
        @Html.HiddenFor(model => model.rowid)
    }

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.payment_no, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.payment_no, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.payment_no)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.payment, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.payment, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.payment)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.remark, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.remark)
    </div>

    <div>
        <input type="submit" value="存檔" class="btn btn-success form-button" />
    </div>
}