@model campingplan.Models.status

@{
    ViewBag.Title = "訂單狀態刪除";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@using (Html.BeginForm("Delete", "Status", new { area = "Admin" }, FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(model => model.rowid)

    <div class="form-group">
        @Html.LabelFor(model => model.status_no, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.status_no != null)
        {<span class="control-label control-value">@Model.status_no</span>}
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.status_name, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.status_name != null)
        {<span class="control-label control-value">@Model.status_name</span>}
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.remark != null)
        {<span class="control-label control-value">@Model.remark</span>}
    </div>

    <div>
        <input type="submit" value="刪除" class="btn btn-danger form-button" />
    </div>
}