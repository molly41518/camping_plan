@using campingplan.Models;
@model campingplan.Models.product_typedetail

@{
    ViewBag.Title = "商品描述";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@section scripts {
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script>
        var editor = CKEDITOR.editor.replace(
            'ptype_dep' ,
            {
                skin: 'kama',
                width: '750px',
                filebrowserImageUploadUrl: '/Vendor/ProductTypeDetail/UploadImage'
            }
        );
    </script>
}

@using (Html.BeginForm("Pdescription", "ProductTypeDetail", new { area = "Vendor" }, FormMethod.Post, new { id = "popupForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.rowid)

    <div class="form-group">
        @Html.LabelFor(model => model.ptype_no, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.pno != null)
        {<span class="control-label control-value">@Model.ptype_no</span>}
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ptype_name, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.ptype_name != null)
        {<span class="control-label control-value">@Model.ptype_name</span>}
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ptype_dep, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextArea("ptype_dep", new { id = "ptype_dep", @name = "ptype_dep" })
        @Html.ValidationMessageFor(model => model.ptype_dep)
    </div>
    <div>
        <input type="submit" value="存檔" class="btn btn-success form-button" />
    </div>
}