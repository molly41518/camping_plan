@using campingplan.Models;
@model campingplan.Models.product_typedetail

@{
    ViewBag.Title = "商品資料刪除";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@using (Html.BeginForm("Delete", "ProductTypeDetail", new { area = "Vendor" }, FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(model => model.rowid)
    <div class="control-label control-header control-caption">商品資訊</div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.pno, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.pno != null)
        {<span class="control-label control-value">@Model.pno</span>}
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.parea_name, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.parea_name != null)
        {<span class="control-label control-value">@Model.parea_name</span>}
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ptype_no, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.ptype_no != null)
        {<span class="control-label control-value">@Model.ptype_no</span>}
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ptype_name, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.ptype_name != null)
        {<span class="control-label control-value">@Model.ptype_name</span>}
    </div>


    <hr />
    <div>
        <input type="submit" value="刪除此筆商品資料" class="btn btn-danger form-button" />
    </div>
}