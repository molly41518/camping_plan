@using campingplan.Models;
@using campingplan.App_Class;
@model campingplan.Models.product_typedetail

@{
    ViewBag.Title = "商品資料" + ((Model.rowid > 0) ? "修改" : "新增");
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@using (Html.BeginForm("Edit", "ProductTypeDetail", new { area = "Vendor" }, FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.rowid > 0)
    {
        @Html.HiddenFor(model => model.rowid)
        @Html.HiddenFor(model => model.ptype_dep)
    }

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.pno, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        <span class="control-label control-value">@Shop.Pno</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.parea_name, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.parea_name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.parea_name)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ptype_no, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.ptype_no, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ptype_no)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ptype_name, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.ptype_name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ptype_name)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ptype_price, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.ptype_price, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ptype_price)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.remark, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.remark)
    </div>
    <div>
        <input type="submit" value="存檔" class="btn btn-success form-button" />
    </div>
}