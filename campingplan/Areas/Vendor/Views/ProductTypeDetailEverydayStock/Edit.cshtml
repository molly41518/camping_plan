@using campingplan.Models;
@using campingplan.App_Class;
@model campingplan.Models.product_typedetail_everydaystock

@{
    ViewBag.Title = "商品資料" + ((Model.rowid > 0) ? "修改" : "新增");
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@using (Html.BeginForm("Edit", "ProductTypeDetailEverydayStock", new { area = "Vendor" }, FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.rowid > 0)
    {
        @Html.HiddenFor(model => model.rowid)
    }

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ptype_no, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        <span class="control-label control-value">@Shop.ProductTypeNo</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.stock_date, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.stock_date, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.stock_date)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.stock, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.stock, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.stock)
    </div>
    <div>
        <input type="submit" value="存檔" class="btn btn-success form-button" />
    </div>
}